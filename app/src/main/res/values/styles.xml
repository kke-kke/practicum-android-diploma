<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="title_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="bold_text_style" parent="base_text_style">
        <item name="android:textSize">@dimen/bold_text_size</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="small_text_style" parent="base_text_style">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="button_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:font">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/yp_blue</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>
    <style name="edit_text_style">
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/rounded_rectangle</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
    </style>
    <style name="team_member_text_style" parent="text_style">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>
    <style name="linear_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/background</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>
    <style name="text_input_style">
        <item name="boxBackgroundColor">?attr/backgroundColor</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/button_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/button_corner_radius</item>
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="cursorColor">@color/yp_blue</item>
    </style>
    <style name="search_text_input_style" parent="text_input_style">
        <item name="endIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/yp_black</item>
        <item name="hintEnabled">false</item>
    </style>
    <style name="search_linear_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="job_filter_linear_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:background">?attr/background</item>
    </style>
    <style name="text_input_no_input_style">
        <item name="boxStrokeColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>
    <!-- Экран вакансии -->
    <style name="company_linear_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_bg</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>
